<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/measurement_navigation"
    app:startDestination="@id/editMeasurementFragment">

    <fragment
        android:id="@+id/editMeasurementFragment"
        android:name="com.example.assignment2.measurement.EditMeasurementFragment"
        android:label="fragment_edit_measurement"
        tools:layout="@layout/fragment_edit_measurement" />
    <fragment
        android:id="@+id/measurementFragment2"
        android:name="com.example.assignment2.measurement.MeasurementFragment"
        android:label="fragment_measurement"
        tools:layout="@layout/fragment_measurement" />
    <fragment
        android:id="@+id/viewMeasurementFragment"
        android:name="com.example.assignment2.measurement.ViewMeasurementFragment"
        android:label="fragment_view_measurement"
        tools:layout="@layout/fragment_view_measurement" >
        <action
            android:id="@+id/action_viewMeasurementFragment_to_healthScoreFragment"
            app:destination="@id/healthScoreFragment" />
        <action
            android:id="@+id/action_viewMeasurementFragment_to_heightFragment2"
            app:destination="@id/heightFragment2" />
        <action
            android:id="@+id/action_viewMeasurementFragment_to_weightFragment2"
            app:destination="@id/weightFragment2" />
    </fragment>
    <fragment
        android:id="@+id/healthScoreFragment"
        android:name="com.example.assignment2.measurement.HealthScoreFragment"
        android:label="fragment_health_score"
        tools:layout="@layout/fragment_health_score" >
        <action
            android:id="@+id/action_healthScoreFragment_to_viewMeasurementFragment"
            app:destination="@id/viewMeasurementFragment" />
    </fragment>
    <fragment
        android:id="@+id/heightFragment2"
        android:name="com.example.assignment2.HeightFragment"
        android:label="fragment_height"
        tools:layout="@layout/fragment_height" >
        <action
            android:id="@+id/action_heightFragment2_to_viewMeasurementFragment"
            app:destination="@id/viewMeasurementFragment" />
    </fragment>
    <fragment
        android:id="@+id/weightFragment2"
        android:name="com.example.assignment2.WeightFragment"
        android:label="fragment_weight"
        tools:layout="@layout/fragment_weight" >
        <action
            android:id="@+id/action_weightFragment2_to_viewMeasurementFragment"
            app:destination="@id/viewMeasurementFragment" />
    </fragment>
</navigation>