<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".info.InfoFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey"
        android:src="@drawable/info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="5dp"
            android:text="Discover Top Articles"
            android:textColor="@color/blue"
            android:textSize="25sp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/cardview_dark_background"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Chronic heart disease duration played no or only a minor role in predicting QOL."
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/article1_read"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="65dp"
                android:background="@drawable/round_button"
                android:text="Read More"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/cardview_dark_background"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="QOL has been described in some studies which evaluated acute unstable cardiac angina admitted in cardiac care units."
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/article2_read"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="85dp"
                android:background="@drawable/round_button"
                android:text="Read More"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/cardview_dark_background"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text=" Many patients suffer from depressive and anxiety symptoms with additional negative impact."
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/article3_read"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="65dp"
                android:background="@drawable/round_button"
                android:text="Read More"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>